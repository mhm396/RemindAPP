<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notas1.NewNoteActicity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondologin2"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40dp">

            <EditText
                android:id="@+id/edit_text_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/titulo_nota"
                android:inputType="text"
                android:background="@drawable/input_new_note"
                android:paddingLeft="10dp"
                android:maxLength="40"/>

            <EditText
                android:id="@+id/edit_text_description"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_new_note"
                android:hint="@string/desc_nota"
                android:textAlignment="textStart"
                android:inputType="textMultiLine"
                android:gravity="start"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"/>

            <EditText
                android:id="@+id/edit_text_emailTo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_new_note"
                android:gravity="start"
                android:hint="@string/emailDestin_nota"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textAlignment="textStart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prioridad_nota"
                android:layout_marginTop="50dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <NumberPicker
                android:id="@+id/number_picker_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@drawable/ic_image"
                android:scaleType="fitXY"/>


        </LinearLayout>

    </LinearLayout>




</RelativeLayout>